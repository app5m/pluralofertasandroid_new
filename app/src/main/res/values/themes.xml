 <!-- Primary brand color. -->
        <resources xmlns:tools="http://schemas.android.com/tools">

            <!-- Base application theme. -->
            <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
                <!-- Customize your theme here. -->
                <item name="colorPrimary">@color/colorPrimary</item>
                <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
                <item name="colorAccent">@color/colorAccent</item>

            </style>

            <style name="FundoCorPadraoRoxo">
                <item name="android:background">@drawable/gradient</item>
            </style>

            <style name="fundoLogo">
                <item name="android:background">@drawable/logo_final_responsivo</item>
            </style>

            <!-- Telas com fundo branco -->
            <style name="fundo_tela_branca">
                <item name="android:background">#ffffff</item>
            </style>

            <!-- Instruções -->
            <style name="Instrucoes">
                <item name="android:background">#ffffff</item>
            </style>

            <style name="InstrucaoTitulo">
                <item name="android:gravity">center_horizontal</item>
                <item name="android:textSize">30sp</item>
                <item name="android:lineSpacingExtra">6dp</item>
                <item name="android:textColor">#660066</item>
                <item name="android:fontFamily">@font/uni_neue_bold</item>
                <item name="android:background">#ffffff</item>
                <item name="android:lineHeight" tools:targetApi="p">50dp</item>
                <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">50dp</item>
                <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">50dp</item>
            </style>

            <style name="InstrucaoDescricao">
                <item name="android:textSize">18sp</item>
                <item name="android:lineSpacingExtra">6dp</item>
                <item name="android:fontFamily">@font/uni_neue_regular</item>
                <item name="android:background">#ffffff</item>
                <item name="android:textColor">#000000</item>
                <item name="android:lineHeight" tools:targetApi="p">24dp</item>
                <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">50dp</item>
                <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">50dp</item>
            </style>

            <style name="Botao">
                <item name="android:fontFamily">@font/uni_neue_bold</item>
            </style>

            <!-- Tela de seleção estado/cidade -->

            <style name="regiaoTitulo">
                <item name="android:textColor">#ffffff</item>
                <item name="android:textSize">24sp</item>
                <item name="android:lineSpacingExtra">6sp</item>
                <item name="android:gravity">center_horizontal</item>
                <item name="android:fontFamily">@font/uni_neue_bold</item>
            </style>

            <style name="regiaoSubtitulo">
                <item name="android:textColor">#ffffff</item>
                <item name="android:textSize">16sp</item>
                <item name="android:lineSpacingExtra">8sp</item>
                <item name="android:gravity">center_horizontal</item>
                <item name="android:fontFamily">@font/uni_neue_regular</item>
            </style>

            <style name="btnEstadoCidade">
                <item name="android:textSize">16sp</item>
                <item name="android:textColor">#ff5b5c</item>
            </style>
            <style name="AppTheme.NoActionBar">
                <item name="windowActionBar">false</item>
                <item name="windowNoTitle">true</item>
            </style>
            <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
            <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

            <!-- Home -->

            <style name="corDegradeDaTelaHome">
                <item name="android:background">@drawable/degrade_home</item>
            </style>

            <style name="corSolidaDaTelaHome">
                <item name="android:background">#EFEFEF</item>
            </style>

            <style name="barraDePesquisa">
                <item name="android:textSize">12sp</item>
                <item name="android:textColor">#999999</item>
                <item name="android:lineSpacingExtra">0sp</item>
                <item name="android:fontFamily">@font/uni_neue_bold</item>
            </style>

            <style name="mudarCidade">
                <item name="android:textColor">#ffffff</item>
                <item name="android:textSize">14sp</item>
                <item name="android:fontFamily">@font/uni_neue_bold</item>
                <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
            </style>

            <!-- Do tutorial de tabLayout+ViewPager(Abaixo) -->

            <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

            </style>

            <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
                <item name="windowNoTitle">true</item>
                <item name="windowActionBar">false</item>
                <item name="colorPrimary">@color/colorPrimary</item>
                <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
                <item name="colorAccent">@color/colorAccent</item>
            </style>

            <style name="SemConexaoTitulo">
                <item name="android:fontFamily">@font/uni_neue_bold</item>
                <item name="android:textSize">24sp</item>
                <item name="android:textColor">#000000</item>
            </style>

            <style name="SemConexaoTituloRegiao">
                <item name="android:fontFamily">@font/uni_neue_bold</item>
                <item name="android:textSize">24sp</item>
                <item name="android:textColor">#ffffff</item>
            </style>

            <style name="SemConexaoMensagem">
                <item name="android:fontFamily">@font/uni_neue_book</item>
                <item name="android:textSize">20sp</item>
                <item name="android:textColor">#000000</item>
                <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
            </style>

            <style name="SemConexaoMensagemRegiao">
                <item name="android:fontFamily">@font/uni_neue_book</item>
                <item name="android:textSize">20sp</item>
                <item name="android:textColor">#ffffff</item>
                <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
            </style>

            <style name="SemConexaoBotao">
                <item name="android:fontFamily">@font/uni_neue_bold</item>
                <item name="android:textColor">#ffffff</item>
                <item name="android:textSize">15.8sp</item>
                <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
            </style>



</resources>
