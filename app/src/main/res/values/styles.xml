    <style name="StyleButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size6</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="textAllCaps">true</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="StyleButton2" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size4</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">12dp</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="StyleButton3" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size6</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">12dp</item>
        <item name="textAllCaps">true</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="StyleButton4" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">@color/white</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item> <!--you can give your color here. that will change all divider color in your app.-->
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item> <!-- You can change thickness here.-->

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CardLabel">
        <item name="android:textSize">@dimen/text_size6</item>
        <item name="android:textColor">@color/gray400</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/items_inbetween</item>
        <item name="android:padding">@dimen/items_inbetween_medium</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="CardInput">
        <item name="android:layout_marginLeft">@dimen/items_inbetween</item>
        <item name="android:layout_marginRight">@dimen/items_inbetween</item>
        <item name="android:layout_marginTop">@dimen/items_inbetween</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/items_inbetween_medium</item>
    </style>


    <style name="CardStyle">
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
