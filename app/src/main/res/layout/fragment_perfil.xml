<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/layoutLoggedOut"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="deslogado ai"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/layoutLogged"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/perfilContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:background="@color/colorPrimary"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:clipToPadding="false"
                            app:cardCornerRadius="40dp">

                            <ImageView
                                android:id="@+id/user_foto"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:scaleType="centerCrop" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="1dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nome"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/btnEditProfile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Editar perfil"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/windowBackground"
                        android:orientation="vertical"
                        android:paddingTop="30dp">

                        <TextView
                            android:id="@+id/saldoCreditos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawablePadding="7dp"
                            android:gravity="fill_vertical"
                            android:lineSpacingExtra="10dp"
                            android:padding="15dp"
                            android:paddingStart="17dp"
                            android:text="Saldo em créditos: R$ 0,00"
                            android:textAllCaps="true"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/btnVouchers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="-0.5dp"
                            android:drawablePadding="5dp"
                            android:gravity="fill_vertical"
                            android:lineSpacingExtra="10dp"
                            android:padding="15dp"
                            android:text="Vouchers"
                            android:textAllCaps="true"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/btnCartaoCredito"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="-0.5dp"

                            android:drawablePadding="5dp"
                            android:gravity="fill_vertical"
                            android:lineSpacingExtra="10dp"
                            android:padding="15dp"
                            android:text="Cartões de crédito"
                            android:textAllCaps="true"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/btnFavoritos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="-0.5dp"

                            android:drawablePadding="5dp"
                            android:gravity="fill_vertical"
                            android:lineSpacingExtra="10dp"
                            android:padding="15dp"
                            android:text="Favoritos"
                            android:textAllCaps="true"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/btnWhatsapp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawablePadding="7dp"
                            android:gravity="fill_vertical"
                            android:lineSpacingExtra="10dp"
                            android:padding="15dp"
                            android:paddingStart="17dp"
                            android:text="WhatsApp"
                            android:textAllCaps="true"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/windowBackground"
                        android:orientation="vertical"
                        android:paddingTop="30dp">


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/categoriasMenu_rv_perfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="true"
                            android:overScrollMode="never"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/windowBackground"
                        android:orientation="vertical"
                        android:paddingTop="30dp">

                        <TextView
                            android:id="@+id/btnAjuda"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawablePadding="5dp"
                            android:gravity="fill_vertical"
                            android:lineSpacingExtra="10dp"
                            android:padding="15dp"
                            android:paddingStart="24dp"
                            android:text="Dúvidas e ajuda"
                            android:textAllCaps="true"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/btnAnunciar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="-0.5dp"
                            android:drawablePadding="5dp"
                            android:gravity="fill_vertical"
                            android:lineSpacingExtra="10dp"
                            android:padding="15dp"
                            android:paddingStart="24dp"
                            android:text="Como anunciar"
                            android:textAllCaps="true"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/btNaoRecebiVoucher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="-0.5dp"
                            android:drawablePadding="5dp"
                            android:gravity="fill_vertical"
                            android:lineSpacingExtra="10dp"
                            android:padding="15dp"
                            android:paddingStart="24dp"
                            android:text="Não recebi meu voucher"
                            android:textAllCaps="true"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/windowBackground"
                        android:orientation="vertical"
                        android:paddingTop="30dp">

                        <TextView
                            android:id="@+id/btnComoFunciona"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawablePadding="5dp"
                            android:gravity="fill_vertical"
                            android:lineSpacingExtra="10dp"
                            android:padding="15dp"
                            android:paddingStart="24dp"
                            android:text="Como funciona"
                            android:textAllCaps="true"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/btnTermos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="-0.5dp"

                            android:drawablePadding="5dp"
                            android:gravity="fill_vertical"
                            android:lineSpacingExtra="10dp"
                            android:padding="15dp"
                            android:paddingStart="24dp"
                            android:text="Termos de uso"
                            android:textAllCaps="true"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/btnLogout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="-0.5dp"

                            android:drawablePadding="5dp"
                            android:gravity="fill_vertical"
                            android:lineSpacingExtra="10dp"
                            android:padding="15dp"
                            android:text="Sair"
                            android:textAllCaps="true"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/versao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="5dp"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="10dp"
                    android:padding="15dp"
                    android:text="Versão 0"
                    android:textAllCaps="true"
                    android:textColor="@color/black" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</FrameLayout>