<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/corSolidaDaTelaHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/btnPagarCarrinhoFinalizarCompraButton2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_verde"
        android:fontFamily="@font/uni_neue_bold"
        android:text="PAGAR R$ 00,00"
        android:textColor="#ffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline60"
        app:layout_constraintStart_toEndOf="@id/guideline63" />

    <LinearLayout
        android:id="@+id/btnVoltarCarrinhoFinalizarCompraTextview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/guideline63"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backwardarrow" />

    </LinearLayout>


    <TextView
        android:id="@+id/tituloCarrinhoFinalizarCompraTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/uni_neue_bold"
        android:text="CARRINHO"
        android:textColor="#000000"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/card_fundo_carrinho"
        app:layout_constraintBottom_toTopOf="@id/guideline68"
        app:layout_constraintEnd_toStartOf="@id/guideline71"
        app:layout_constraintStart_toEndOf="@id/guideline70"
        app:layout_constraintTop_toBottomOf="@id/tituloCarrinhoFinalizarCompraTextView"


        >

        <ImageView
            android:id="@+id/imgCupomCarrinhoFinalizarCompraImageView"
            android:layout_width="117dp"
            android:layout_height="114dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_cupom_carrinho"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />


        <TextView
            android:id="@+id/descricaoProdutoCarrinhoFinalizarCompra"
            android:layout_width="0dp"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:minLines="3"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/uni_neue_heavy"
            android:text="Nome do Produto em duas linhas e também em três"
            android:textColor="#000000"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@id/imgCupomCarrinhoFinalizarCompraImageView"
            app:layout_constraintEnd_toStartOf="@id/quantidadeItensCarrinhoFinalizarCompraTextView"
            app:layout_constraintStart_toEndOf="@id/imgCupomCarrinhoFinalizarCompraImageView"
            app:layout_constraintTop_toTopOf="@id/imgCupomCarrinhoFinalizarCompraImageView"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0.10" />

        <TextView
            android:id="@+id/rsCarrinhoFinalizarCompraTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/uni_neue_regular"
            android:text="R$ "
            android:layout_marginStart="16dp"
            android:textColor="#009933"
            android:textSize="12dp"
            app:layout_constraintVertical_bias="0.90"
            app:layout_constraintTop_toTopOf="@id/imgCupomCarrinhoFinalizarCompraImageView"
            app:layout_constraintBottom_toBottomOf="@id/imgCupomCarrinhoFinalizarCompraImageView"
            app:layout_constraintStart_toEndOf="@id/imgCupomCarrinhoFinalizarCompraImageView"
             />

        <TextView
            android:id="@+id/precoCarrinhoFinalizarCompraTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/uni_neue_bold"
            android:text="100"
            android:textColor="#009933"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@id/rsCarrinhoFinalizarCompraTextView"
            app:layout_constraintStart_toEndOf="@id/rsCarrinhoFinalizarCompraTextView"
            app:layout_constraintTop_toTopOf="@id/rsCarrinhoFinalizarCompraTextView"
            app:layout_constraintVertical_bias="0.8" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnAdicaoCarrinhoFinalizarCompraImageView"
            android:clickable="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toTopOf="@id/quantidadeItensCarrinhoFinalizarCompraTextView"
            app:layout_constraintEnd_toEndOf="@id/guideline72"
            app:layout_constraintStart_toStartOf="@id/guideline72"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/btn_sinal_adicao"
                android:clickable="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/quantidadeItensCarrinhoFinalizarCompraTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/fundo_num_itens_carrinho"
            android:fontFamily="@font/uni_neue_bold"
            android:gravity="center"
            android:textColor="#ff5b5c"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline72"
            app:layout_constraintStart_toStartOf="@id/guideline72"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"

            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnSubtracaoCarrinhoFinalizarCompraLinearLayout"
            android:clickable="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="@id/guideline72"
            app:layout_constraintStart_toStartOf="@id/guideline72"
            app:layout_constraintTop_toBottomOf="@id/quantidadeItensCarrinhoFinalizarCompraTextView"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:layout_marginTop="15dp"
                android:src="@drawable/btn_sinal_subtracao"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline72"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/subtotalCarrinhoFinalizarCompraTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/uni_neue_regular"
        android:text="Subtotal:"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/guideline63"
        app:layout_constraintTop_toBottomOf="@id/guideline68" />

    <TextView
        android:id="@+id/subtotalValorCarrinhoFinalizarCompraTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/uni_neue_regular"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@id/guideline60"
        app:layout_constraintTop_toBottomOf="@id/guideline68" />

    <TextView
        android:id="@+id/rsSubtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/uni_neue_regular"
        android:text="R$"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@id/subtotalValorCarrinhoFinalizarCompraTextView"
        app:layout_constraintTop_toBottomOf="@id/guideline68" />

    <TextView
        android:id="@+id/taxaOperacionalCarrinhoFinalizarCompraTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/uni_neue_regular"
        android:text="Taxa Operacional:"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/guideline63"
        app:layout_constraintTop_toBottomOf="@id/subtotalCarrinhoFinalizarCompraTextView"

        />

    <TextView
        android:id="@+id/taxaOperacionalValorCarrinhoFinalizarCompraTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/uni_neue_regular"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@id/guideline60"
        app:layout_constraintTop_toBottomOf="@id/subtotalValorCarrinhoFinalizarCompraTextView"

        />

    <TextView
        android:id="@+id/rsTaxa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/uni_neue_regular"
        android:text="R$"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@id/taxaOperacionalValorCarrinhoFinalizarCompraTextView"
        app:layout_constraintTop_toBottomOf="@id/subtotalValorCarrinhoFinalizarCompraTextView"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:background="#D9D9D9"
        app:layout_constraintEnd_toStartOf="@id/guideline60"
        app:layout_constraintStart_toEndOf="@id/guideline63"
        app:layout_constraintTop_toBottomOf="@id/taxaOperacionalCarrinhoFinalizarCompraTextView">

        <TextView
            android:id="@+id/totalCarrinhoFinalizarCompraTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/uni_neue_regular"
            android:text="Total:"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"


            />

        <TextView
            android:id="@+id/totalValorCarrinhoFinalizarCompraTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/uni_neue_bold"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rsTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/uni_neue_bold"
            android:text="R$"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/totalValorCarrinhoFinalizarCompraTextView"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D9D9D9"
        app:layout_constraintBottom_toBottomOf="@id/constraintLayout2"
        app:layout_constraintEnd_toStartOf="@id/constraintLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/constraintLayout2"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:fontFamily="@font/uni_neue_bold"
            android:text=" "
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D9D9D9"
        app:layout_constraintBottom_toBottomOf="@id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/constraintLayout2"
        app:layout_constraintTop_toTopOf="@id/constraintLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:fontFamily="@font/uni_neue_bold"
            android:text=" "
            android:textSize="16dp" />

    </LinearLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline63"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline68"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline71"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94" />

</androidx.constraintlayout.widget.ConstraintLayout>