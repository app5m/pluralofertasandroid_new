<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/retangulo1559"
        android:id="@+id/linearLayout"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"

>

    <ImageView
            android:layout_width="0dp"
            android:id="@+id/imageProductsIv"
            android:layout_height="116dp"
            android:src="@drawable/imagem_cupom_recycler"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline11"
            app:layout_constraintEnd_toStartOf="@+id/guideline12"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/elipse245"
            android:textAlignment="center"
            android:text=" 50%\nOFF"
            android:id="@+id/offTv"
            android:paddingTop="6dp"
            android:lineSpacingExtra="-5dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:fontFamily="@font/uni_neue_heavy"
            app:layout_constraintStart_toStartOf="@+id/guideline16"
            app:layout_constraintEnd_toStartOf="@+id/guideline15"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@id/imageProductsIv"
            app:layout_constraintBottom_toBottomOf="@id/imageProductsIv"
            app:layout_constraintVertical_bias="0.5"/>

    <TextView
            android:id="@+id/productNameTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="0.7dp"
            android:lineHeight="15dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            tools:text="Nome do produto em duas linhas e também em três linhas"
            android:fontFamily="@font/uni_neue_heavy"
            app:layout_constraintStart_toStartOf="@+id/guideline11"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toStartOf="@+id/guideline12"
            app:layout_constraintTop_toBottomOf="@+id/offTv"
            android:clickable="true"
    />

    <TextView
            android:id="@+id/productDescriptionTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="10sp"
            android:textColor="#000000"
            android:lineHeight="10sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="0sp"
            android:fontFamily="@font/uni_neue_regular"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor."
            app:layout_constraintStart_toStartOf="@+id/guideline11"
            app:layout_constraintEnd_toStartOf="@+id/guideline12"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintTop_toBottomOf="@+id/productNameTv"/>

    <TextView
            android:id="@+id/asOfTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="#000000"
            tools:text="A PARTIR DE"
            android:fontFamily="@font/uni_neue_book"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingTop="3dp"
            app:layout_constraintStart_toStartOf="@+id/guideline11"
            app:layout_constraintEnd_toStartOf="@+id/guideline12"
            app:layout_constraintTop_toBottomOf="@id/productDescriptionTv"
            app:layout_constraintVertical_bias="0"

    />

    <ImageView
        android:id="@+id/favoritoOfferBtn"
        android:textSize="10dp"
        android:background="@drawable/coracao"
        android:layout_width="18.3dp"
        android:layout_height="16.1dp"
        app:layout_constraintTop_toTopOf="@id/productValueTv"
        app:layout_constraintStart_toStartOf="@id/offTv"
        app:layout_constraintBottom_toBottomOf="@+id/productValueTv"
        app:layout_constraintEnd_toEndOf="@id/offTv"/>

    <TextView
            android:fontFamily="@font/uni_neue_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#009933"
            android:id="@+id/RsTv"
            android:textAlignment="textStart"
            tools:text="R$"
            app:layout_constraintVertical_bias="0.8"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/productValueTv"
            app:layout_constraintStart_toStartOf="@+id/guideline11"
            app:layout_constraintEnd_toStartOf="@+id/guideline17"
            app:layout_constraintBottom_toBottomOf="@id/productValueTv"/>

    <TextView
            android:id="@+id/productValueTv"
            android:fontFamily="@font/uni_neue_bold"
            android:layout_width="0dp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#009933"
            tools:text=" 10,00"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintTop_toBottomOf="@+id/asOfTv"
            app:layout_constraintStart_toEndOf="@id/RsTv"
            app:layout_constraintEnd_toStartOf="@+id/guideline16"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline10"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline11"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.018"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline12"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.982"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline13"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline14"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline15"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline16"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline17"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.07"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline18"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8"/>


</androidx.constraintlayout.widget.ConstraintLayout>


