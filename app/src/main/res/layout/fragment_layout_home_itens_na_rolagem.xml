<com.google.android.material.appbar.CollapsingToolbarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingBottom="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText

            style="@style/barraDePesquisa"
            android:paddingStart="25.5dp"
            android:paddingEnd="20.1dp"
            android:id="@+id/btnHomeSearchBar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:hint="O que vocÃª procura?"
            android:inputType="textCapSentences"
            tools:layout_editor_absoluteX="24dp"
            android:focusedByDefault="false"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:elevation="0dp"

            />

        <ImageView
            app:layout_constraintTop_toTopOf="@id/btnHomeSearchBar"
            app:layout_constraintBottom_toBottomOf="@id/btnHomeSearchBar"
            app:layout_constraintEnd_toEndOf="@id/btnHomeSearchBar"
            app:layout_constraintStart_toStartOf="@id/btnHomeSearchBar"
            app:layout_constraintHorizontal_bias="0.92"
            android:id="@+id/btnCloseSearch"
            android:clickable="true"
            android:visibility="gone"
            android:src="@drawable/btn_close_search"
            android:layout_width="20dp"
            android:layout_height="20dp"/>


