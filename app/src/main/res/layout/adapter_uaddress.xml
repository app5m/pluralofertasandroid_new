<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    android:background="@color/white"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <RadioButton
            android:id="@+id/address_radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/currentLocation_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toLeftOf="@id/remove_imageButton"
            android:layout_toRightOf="@id/address_radioButton"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Localização atual"
            android:textSize="@dimen/text_size5"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cityState_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/currentLocation_textView"
            android:layout_toRightOf="@id/address_radioButton"
            android:text="Cidade - (UF)"
            android:textColor="@color/gray700" />

        <TextView
            android:id="@+id/nbh_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/cityState_textView"
            android:layout_toRightOf="@id/address_radioButton"
            android:text="Bairro"
            android:textColor="@color/gray700" />

        <TextView
            android:id="@+id/address_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@id/nbh_textView"
            android:layout_toRightOf="@id/address_radioButton"
            android:text="Endereço"
            android:textColor="@color/gray700" />

        <TextView
            android:id="@+id/number_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_toRightOf="@id/address_radioButton"
            android:layout_below="@id/address_textView"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Número"
            android:textColor="@color/gray700" />

        <TextView
            android:id="@+id/complement_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toLeftOf="@id/remove_imageButton"
            android:layout_below="@id/number_textView"
            android:layout_toRightOf="@id/address_radioButton"
            android:text="Complemento"
            android:textColor="@color/gray700" />

        <ImageButton
            android:id="@+id/remove_imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_close"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>