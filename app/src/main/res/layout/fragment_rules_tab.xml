<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="24dp"
    android:paddingTop="17dp"
    android:paddingEnd="24dp"
    android:orientation="vertical"
  >


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tituloQuandoUsarDetalhesRegrasTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:lineSpacingExtra="2dp"
                android:lineHeight="16dp"
                android:textSize="16dp"
                android:textAlignment="textStart"
                android:text="Quando usar"
                android:fontFamily="@font/uni_neue_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/descricaoQuandoUsarDetalhesRegrasTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="2dp"
                android:lineHeight="16dp"
                android:textSize="14dp"
                android:textAlignment="textStart"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vel erat quis"
                android:fontFamily="@font/uni_neue_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tituloQuandoUsarDetalhesRegrasTextView"
                app:layout_constraintHorizontal_bias="0.0"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/regrasDetalhesRegrasRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/fragment_cell_layout_regras_detalhes_do_produto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/descricaoQuandoUsarDetalhesRegrasTextView"
                android:layout_marginTop="14dp"
                >


            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/importanteDetalhesRegrasTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:lineSpacingExtra="2dp"
                android:lineHeight="16dp"
                android:textSize="16dp"
                android:textAlignment="textStart"
                android:text="Importante"
                android:fontFamily="@font/uni_neue_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/regrasDetalhesRegrasRecyclerView"
                app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="14dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:lineSpacingExtra="2dp"
                android:lineHeight="16dp"
                android:textSize="14dp"
                android:textAlignment="textStart"
                android:layout_marginTop="12dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vel erat quis orci vestibulum dictum id a orci.."
                android:fontFamily="@font/uni_neue_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/textView11"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toBottomOf="@id/importanteDetalhesRegrasTextView"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>