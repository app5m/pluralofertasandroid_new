<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >

    <TextView
            android:id="@+id/diaSemanaCellLayoutRegrasTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:lineSpacingExtra="2dp"
            android:lineHeight="16dp"
            android:textSize="14dp"
            android:textAlignment="textStart"
            android:text="Terça à quinta"
            android:fontFamily="@font/uni_neue_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline40"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
    />

    <ImageView
            android:src="@drawable/linha_base"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/linhaColoridaCellRegrasImageView"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toEndOf="@id/diaSemanaCellLayoutRegrasTextView"
            app:layout_constraintEnd_toStartOf="@id/horarioCellLayoutRegrasTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    <TextView
            android:id="@+id/horarioCellLayoutRegrasTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:lineSpacingExtra="2dp"
            android:lineHeight="16dp"
            android:textSize="14dp"
            android:textAlignment="textStart"
            android:text="18:30 às 22:30"
            android:fontFamily="@font/uni_neue_regular"
            app:layout_constraintStart_toEndOf="@id/guideline41"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1"
            />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline40"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.30"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline41"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.70"/>


</androidx.constraintlayout.widget.ConstraintLayout>