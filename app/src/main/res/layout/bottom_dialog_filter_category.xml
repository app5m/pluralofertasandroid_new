<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sheet_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/botton_sheet_background"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Filtrar por categoria"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/text_size6" />

    <Spinner
        android:id="@+id/category_sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:entries="@array/default_array"
        android:layout_margin="16dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/filter_bt"
        style="@style/StyleButton4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        android:backgroundTint="@color/colorAccent"
        android:text="Filtrar"/>

</LinearLayout>