<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingEnd="12dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/item_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="12dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/product_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_iv"
            android:layout_toLeftOf="@id/removeProduct_ib"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:text="lorem ipsum"
            android:textSize="@dimen/text_size5" />

        <ImageButton
            android:id="@+id/removeProduct_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/product_tv"
            android:layout_alignBottom="@id/product_tv"
            android:padding="4dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_close"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_tv"
            android:gravity="bottom"
            android:layout_alignBottom="@id/item_iv"
            android:layout_toRightOf="@id/item_iv">

            <include layout="@layout/add_remove"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/valueProduct_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="0"
                android:gravity="end"
                android:ellipsize="end"
                android:textSize="@dimen/text_size5"
                android:textColor="@color/colorPrimaryDark"
                android:text="R$ 10,0"
                android:maxLines="2" />


        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
