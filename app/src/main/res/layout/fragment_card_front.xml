<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.fragment.drawer.user.cards.CardFrontFrag">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:layout_margin="16dp"
        android:background="@drawable/ic_card_bg"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/type_iv"
                android:layout_width="@dimen/chip_width"
                android:layout_height="@dimen/chip_height"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_chip" />

            <TextView
                android:id="@+id/cardNumber_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="**** **** **** ****"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/items_inbetween_small"
                    android:text="Validade"
                    android:textColor="@color/white"
                    android:textSize="@dimen/xsmall_text" />

                <TextView
                    android:id="@+id/validity_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/xsmall_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:text=""
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />


                <ImageView
                    android:id="@+id/typeCard_iv"
                    android:layout_width="@dimen/cardtype_width"
                    android:layout_height="@dimen/cardtype_height"
                    android:layout_weight="0"
                    />

            </LinearLayout>

        </LinearLayout>




    </RelativeLayout>

</FrameLayout>
