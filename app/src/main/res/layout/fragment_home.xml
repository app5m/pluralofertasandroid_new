<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef"
        tools:context=".ui.fragment.home.main.HomeFragmentOffer">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <include
            android:id="@+id/loadHome"
            layout="@layout/loading"
            android:visibility="gone" />

        <include layout="@layout/home_body"/>

    </FrameLayout>

    <com.google.android.material.appbar.AppBarLayout
            style="@style/corDegradeDaTelaHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:elevation="0dp">

        <include
            android:id="@+id/layoutHomeSemInternet"
            layout="@layout/cell_home_sem_internet"
            android:visibility="gone" />

        <include layout="@layout/fragment_layout_home_itens_na_rolagem"

                />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/filterTv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/grupo4802"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/btnSwitchCity"
        style="@style/mudarCidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/retangulo1477"
        android:clickable="true"
        android:drawableEnd="@drawable/arrow_down_white"
        android:drawablePadding="9dp"
        android:ellipsize="end"
        android:focusable="true"
        android:justificationMode="inter_word"
        android:maxWidth="10dp"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="11dp"
        android:paddingBottom="8dp"
        android:text="Av. Juscelino Kubitschek de Oliveira, 440 - Alto PetrÃ³polis, Porto Alegre - RS, 91240-090"
        android:textAllCaps="true"
        android:textSize="12sp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>