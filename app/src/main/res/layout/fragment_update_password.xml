<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/FundoCorPadraoRoxo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.home.main.UpdatePasswordFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/background_login_cadastro_ll"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alterar senha"
                        android:gravity="center"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/newPassword_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/rectangle_bg_et"
                        android:drawableEnd="@drawable/ic_password_edittext"
                        android:fontFamily="@font/uni_neue_regular"
                        android:inputType="textPassword"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:hint="nova senha" />

                    <EditText
                        android:id="@+id/coPassword_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/rectangle_bg_et"
                        android:drawableEnd="@drawable/ic_password_edittext"
                        android:fontFamily="@font/uni_neue_regular"
                        android:inputType="textPassword"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:hint="confirmar senha" />

                </LinearLayout>

                <Button
                    android:id="@+id/updatePass_bt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/main_button_green"
                    android:fontFamily="@font/uni_neue_bold"
                    android:text="Alterar"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline24"
                    app:layout_constraintHorizontal_bias="0.492"
                    app:layout_constraintStart_toStartOf="@+id/guideline25"
                    app:layout_constraintTop_toBottomOf="@+id/senhaEditTextLogin"
                    app:layout_constraintVertical_bias="0.10" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>