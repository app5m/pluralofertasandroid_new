<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/localTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="24dp"
            android:drawableStart="@drawable/placeholder"
            android:drawablePadding="6dp"
            android:text="Porto Alegre"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/saleNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="24dp"
            android:ellipsize="end"
            android:fontFamily="@font/uni_neue_heavy"
            android:maxLines="3"
            android:text="Mega Burger"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/namePlaceTv"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/uni_neue_regular"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:text="Plural Ofertas"
            android:textAlignment="textStart"
            android:textColor="#660066"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numAvaiableCouponsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/uni_neue_bold"
                android:text="6 Disponivies"
                android:textAllCaps="true"
                android:textColor="#009933"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/numUnAvaiableCouponsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/uni_neue_bold"
                android:text="5 Vendidos"
                android:textAllCaps="true"
                android:textColor="#ff5b5c"
                android:textSize="14sp" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/couponsRv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>